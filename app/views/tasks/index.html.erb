Welcome, <%= current_user.username %> you have <%= Task.count %> pending, active or completed tasks

<div class="row">
  <div id="pending" class="col-4">
    <div class="card" style="width: 18rem;">
      <div class="card-header">
        Pending
      </div>
      <ul class="list-group list-group-flush">

        <% @tasks.pending.each do |task| %>

          <li class="list-group-item">(<%= task.status %>) <%= task.body %> (<%= link_to 'Show', task %>, <%= link_to 'Edit', edit_task_path(task) %>, <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %>)
          </li>
        <% end %>

      </ul>
    </div>

  </div>
  <div id="pending" class="col-4">
    <div class="card" style="width: 18rem;">
      <div class="card-header">
        In progress
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">An item</li>
        <li class="list-group-item">A second item</li>
        <li class="list-group-item">A third item</li>
      </ul>
    </div>
  </div>
  <div id="pending" class="col-4">
    <div class="card" style="width: 18rem;">
      <div class="card-header">
        Completed
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">An item</li>
        <li class="list-group-item">A second item</li>
        <li class="list-group-item">A third item</li>
      </ul>
    </div>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Status</th>
      <th>User</th>
      <th>user</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.body %></td>
        <td><%= task.status %></td>
        <td><%= task.user_id %></td>
        <td><%= task.user %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

