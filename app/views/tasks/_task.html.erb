<li class="list-group-item" id="task_<%= task.id %>">
<span class="mt-2"><%= task.body %></span>
<div class="row mt-2">
<div class="mx-auto font-weight-lighter text-right">
Last updated: <%= time_ago_in_words(task.updated_at) %>
</div>
</div>
  <div class="row mt-2 d-flex">
    <div class="col align-text-baseline text-center">
      <% if task.status == "pending" %>
        <%= link_to move_task_path(task), method: :patch, remote: true do %>
          <i class='fa-sharp fa-solid fa-forward'></i>
        <% end %>
      <% elsif task.status == "progress" %>
        <%= link_to move_task_path(task), method: :patch, remote: true  do %>
          <i class="fa-solid fa-square-check"></i>
        <% end %>
      <% else %>
        <%= link_to move_task_path(task), method: :patch, remote: true  do %>
          <i class="fa-sharp fa-solid fa-clock-rotate-left"></i>
        <% end %>

      <% end %>

    </div>
    <div class="col mx-auto align-text-baseline text-center">
      <%= link_to edit_task_path(task), remote: true do %>
        <i class="fa-regular fa-pen-to-square"></i>
      <% end %>
    </div>
    <div class="col mx-auto align-text-baseline text-center"><%= link_to task, method: :delete, remote: true, data: { confirm: 'Are you sure?' } do %>
        <i class="fa-solid fa-trash"></i>
      <% end %></div>

  </div>
</li>
